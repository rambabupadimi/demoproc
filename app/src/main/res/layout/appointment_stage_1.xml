<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appointment Type"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Select the type of appointment you wish to book"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimaryDarker"
            android:text="CHECKUP"
            android:textColor="@color/colorWhite"
            android:id="@+id/ap_checkup"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimaryDarker"
            android:text="HYGIENE"
            android:textColor="@color/colorWhite"
            android:id="@+id/ap_hygiene"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimaryDarker"
            android:text="EMERGENCY"
            android:textColor="@color/colorWhite"
            android:id="@+id/ap_emergency"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimaryDarker"
            android:text="CANCEL"
            android:textColor="@color/colorWhite"
            android:id="@+id/ap_cancel"
            />

    </LinearLayout>


</LinearLayout>
